<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="Per-build Container Kubernetes Backend" plugins-version="2">
    <plugin-info>
        <description>The Kubernetes Backend for per-build container docker agents, managed by the Bamboo server.</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="bamboo-kubernetes-backend-plugin"/>

    <component key="isolatedAgentService" class="com.atlassian.buildeng.kubernetes.KubernetesIsolatedDockerImpl" public="true">
        <interface>com.atlassian.buildeng.spi.isolated.docker.IsolatedAgentService</interface>
        <interface>com.atlassian.sal.api.lifecycle.LifecycleAware</interface>
    </component>

    <component key="globalConfiguration" class="com.atlassian.buildeng.kubernetes.GlobalConfiguration" public="true">
        <interface>com.atlassian.buildeng.spi.isolated.docker.ContainerSizeDescriptor</interface>
    </component>
    
    <component key="kubeJmxService" class="com.atlassian.buildeng.kubernetes.jmx.KubeJmxService"/>

    <component key="externalIdService" class="com.atlassian.buildeng.kubernetes.ExternalIdServiceImpl"/>

    <component-import key="pluginScheduler">
        <description>SAL Scheduler</description>
        <interface>com.atlassian.sal.api.scheduling.PluginScheduler</interface>
    </component-import>
    
    <component-import key="bandanaManager" interface="com.atlassian.bandana.BandanaManager"/>

    <!-- REST resources -->
    <rest key="pbc-kubernetes" path="/pbc-kubernetes" version="1.0">
        <description>Provides the REST resource</description>
    </rest>

    <web-resource key="aui-stuff">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.plugins.jquery:jquery</dependency>

        <resource type="download" name="viewKubernetesConfiguration.js" location="/viewKubernetesConfiguration.js"/>
        <context>viewKubernetesConfiguration</context>
    </web-resource>

    <web-item key="kubernetes-config" name="Configure Kubernetes Backend" section="system.admin/plugins" weight="296">
        <description key="kubernetes-config-link.desc"/>
        <label key="kubernetes-config-link.label"/>
        <link linkId="kubernetes-config-link">/admin/viewKubernetesConfiguration.action</link>
    </web-item>

    <xwork key="kubernetes-configuration" name="Configure Kubernetes Backend">
        <package name="kubernetesConfiguration" extends="admin">
            <action name="viewKubernetesConfiguration" class="com.atlassian.buildeng.kubernetes.ConfigurationAction">
                <result name="success" type="freemarker">/config/kubernetesConfig.ftl</result>
            </action>
        </package>
    </xwork>
    
    <bambooEventListener key="onCancelledBuild" name="Listens on Build Cancelled events"
                         class="com.atlassian.buildeng.kubernetes.OnCancelledBuild">
        <description>Listens to events of Bamboo.</description>
    </bambooEventListener>    

</atlassian-plugin>
